pipeline {
    agent {
        docker {
            image 'michaelmagic97/sce-movie-social:v1.0'
            args '-p 3002:3001 -u root'
        }
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'yarn install'
            }
        }
        stage('Linting') {
            steps {
                sh 'yarn lint'
            }
        }
        stage('Unit Test and Integration tests') {
            steps {
                sh 'yarn test'
            }
        }
        stage('Build') {
            steps {
                sh 'yarn build'
            }
        }
        stage('Check for formatting issues') {
            steps {
                sh 'yarn run format:check' 
            }
        }
    }
}
